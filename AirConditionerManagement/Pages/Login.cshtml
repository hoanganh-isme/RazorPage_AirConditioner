@page
@model AirConditionerManagement.Pages.LoginModel
@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="container">
        <header>AirConditioner Shop</header>
        <form method="post">
            <div class="input-field">
                <input asp-for="StaffMember.EmailAddress" class="form-control" required="true" />
                <label>Email or Username</label>
            </div>
            <div class="input-field">
                <input asp-for="StaffMember.Password" class="pswrd" required="true" type="password" />
                <span class="show">SHOW</span>
                <label>Password</label>
            </div>
            @if (ViewData["notification"] != null)
            {
                <div class="notification">@ViewData["notification"]</div>
            }
            <div class="button">
                <div class="inner"></div>
                <button method="post" asp-page-handler="login" type="submit">LOGIN</button>
            </div>
        </form>
        <div class="signup">
            Not a member? <a href="Register">SignUp now</a>
        </div>
    </div>
    <script>
        var input = document.querySelector('.pswrd');
        var show = document.querySelector('.show');
        show.addEventListener('click', active);
        function active() {
            if (input.type === "password") {
                input.type = "text";
                show.style.color = "#1DA1F2";
                show.textContent = "HIDE";
            } else {
                input.type = "password";
                show.textContent = "SHOW";
                show.style.color = "#111";
            }
        }
    </script>
</body>

