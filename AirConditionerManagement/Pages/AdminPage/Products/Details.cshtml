@page
@model AirConditionerManagement.Pages.AdminPage.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>AirConditioner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.AirConditionerName)
        </dd>
        <dt class="col-sm-2">
            Bảo hành 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.Warranty)
        </dd>
        <dt class="col-sm-2">
           Âm thanh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.SoundPressureLevel)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">           
            <img src="@Html.DisplayFor(model => model.AirConditioner.Image)" alt="Air Conditioner Image" style="max-width: 100px; max-height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            Tính năng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.FeatureFunction)
        </dd>
        <dt class="col-sm-2">
            Số lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.Quantity)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.DollarPrice)
        </dd>
        <dt class="col-sm-2">
            Hãng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirConditioner.Supplier.SupplierName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AirConditioner?.AirConditionerId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
