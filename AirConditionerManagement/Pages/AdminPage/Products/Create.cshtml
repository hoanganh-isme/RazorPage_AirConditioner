@page
@model AirConditionerManagement.Pages.AdminPage.Products.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}


<h1>Create</h1>

<h4>AirConditioner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirConditioner.AirConditionerName" class="control-label"></label>
                <input asp-for="AirConditioner.AirConditionerName" class="form-control" />
                <span asp-validation-for="AirConditioner.AirConditionerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioner.Warranty" class="control-label"></label>
                <input asp-for="AirConditioner.Warranty" class="form-control" />
                <span asp-validation-for="AirConditioner.Warranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioner.SoundPressureLevel" class="control-label"></label>
                <input asp-for="AirConditioner.SoundPressureLevel" class="form-control" />
                <span asp-validation-for="AirConditioner.SoundPressureLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AirConditioner.FeatureFunction" class="control-label"></label>
                <input asp-for="AirConditioner.FeatureFunction" class="form-control" />
                <span asp-validation-for="AirConditioner.FeatureFunction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioner.Quantity" class="control-label"></label>
                <input asp-for="AirConditioner.Quantity" class="form-control" />
                <span asp-validation-for="AirConditioner.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioner.DollarPrice" class="control-label"></label>
                <input asp-for="AirConditioner.DollarPrice" class="form-control" />
                <span asp-validation-for="AirConditioner.DollarPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioner.SupplierId" class="control-label"></label>
                <select asp-for="AirConditioner.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>

            <div class="form-group">
                <label asp-for="AirConditioner.Image" class="control-label"></label>
                <input asp-for="AirConditioner.Image" type="file" class="form-control" />
                <span asp-validation-for="AirConditioner.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

