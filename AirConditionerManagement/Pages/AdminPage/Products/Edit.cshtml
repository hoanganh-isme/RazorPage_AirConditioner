@page
@model AirConditionerManagement.Pages.AdminPage.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>AirConditioner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AirConditionerVM.AirConditionerId" />
            <div class="form-group">
                <label asp-for="AirConditionerVM.AirConditionerName" class="control-label"> Tên sản phẩm</label>
                <input asp-for="AirConditionerVM.AirConditionerName" class="form-control" />
                <span asp-validation-for="AirConditionerVM.AirConditionerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.Warranty" class="control-label">Bảo hành</label>
                <input asp-for="AirConditionerVM.Warranty" class="form-control" />
                <span asp-validation-for="AirConditionerVM.Warranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.SoundPressureLevel" class="control-label">Âm thanh</label>
                <input asp-for="AirConditionerVM.SoundPressureLevel" class="form-control" />
                <span asp-validation-for="AirConditionerVM.SoundPressureLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.Image" class="control-label">Hình ảnh</label>
                <input asp-for="AirConditionerVM.Image" type="file" class="form-control" />
                <span asp-validation-for="AirConditionerVM.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.FeatureFunction" class="control-label">Tính năng</label>
                <input asp-for="AirConditionerVM.FeatureFunction" class="form-control" />
                <span asp-validation-for="AirConditionerVM.FeatureFunction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.Quantity" class="control-label">Số lượng</label>
                <input asp-for="AirConditionerVM.Quantity" class="form-control" />
                <span asp-validation-for="AirConditionerVM.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.DollarPrice" class="control-label">Giá</label>
                <input asp-for="AirConditionerVM.DollarPrice" class="form-control" />
                <span asp-validation-for="AirConditionerVM.DollarPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditionerVM.SupplierId" class="control-label">Hãng</label>
                <select asp-for="AirConditionerVM.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="AirConditionerVM.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

